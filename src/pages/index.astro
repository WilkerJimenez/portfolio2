---
import Layout from "../layouts/Layout.astro";
import Petanimation from "../components/petanimation.jsx";
const palabras = ["Portafolio", "Wilker JimÃ©nez"];

const divisor = (num: number) => {
  const characters = palabras[num].split("");
  let resp = characters.map((c) => {
    return c;
  });
  return resp;
};
---

<Layout>
  <div class="w-full h-screen flex justify-center items-center">
    <div class="w-screen sm:w-md sm:h-md md:w-2xl md:h-2xl lg:w-4xl lg:h-4xl xl:w-6xl xl:h-6xl 2xl:w-7xl 2xl:h-7xl relative flex justify-center items-center">
      <div class="absolute inset-0 z-0">
        <Petanimation client:load client:only="react" />
      </div>
      
      <div
        class="w-screen sm:w-md sm:h-md md:w-2xl md:h-2xl lg:w-4xl lg:h-4xl xl:w-6xl xl:h-6xl 2xl:w-7xl 2xl:h-7xl p-74 bg-[var(--color-a)] flex justify-center items-center sm:rounded shadow"
      >
        <div
          class="grid grid-row-2 divide-y-2 divide-[var(--color-bg)] z-10"
        >
            <div class="flex justify-center w-full">
              {
                divisor(0)?.map((items) => {
                  return (
                    <span class="hover:-translate-y-1 duration-200 cursor-default text-center font-montserrat uppercase text-3xl sm:text-5xl font-bold text-[var(--color-p)]">
                      {items}
                    </span>
                  );
                })
              }
            </div>

            <div class="flex justify-center w-full">
              {
                divisor(1)?.map((items) => {
                  return (
                    <span class="hover:-translate-y-1 duration-200 cursor-default text-center font-montserrat text-xl sm:text-3xl font-bold text-[var(--color-p)]">
                      {items === " " ? "â €" : items}
                    </span>
                  );
                })
              }
          </div>
        </div>
      </div>
    </div>
    <style></style>
  </div>
</Layout>
